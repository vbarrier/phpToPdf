<style>
    /* Generic */
    @page {
        margin: 100px;
    }
    @font-face {
        font-family: poppins-regular;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-regular.ttf") format("truetype");
    }
    @font-face {
        font-family: poppins-bold;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-bold.ttf") format("truetype");
    }
    @font-face {
        font-family: poppins-italic;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-italic.ttf") format("truetype");
    }
    body {
        font-family: poppins-regular, sans-serif;
        font-size: 14px;
        line-height: 14px;
    }
    b, strong, h1, h2, h3, h4, h5, h6, th {
        font-family: poppins-bold, sans-serif;
    }
    i, em {
        font-family: poppins-italic, sans-serif;
    }
    h1 {
        margin-top: 100px;
        text-align: center;
        margin-bottom: 150px;
        text-transform: uppercase;
    }
    .signature {
        margin-top: 150px;
        float: right;
    }
    .dynamic-data {
        font-family: poppins-bold, sans-serif;
    }
    .header {
        margin-top: -45px;
    }
    .header .logo {
        width: 150px;
    }
    .header .documentTitle {
        font-size: 12px;
        float: right;
    }
    .footer {
        font-size: 11px;
        line-height: 11px;
        text-align: center;
        position: fixed;
        bottom: -45px;
        left: 0;
        right: 0;
        height: 50px;
    }
    /* Utilities */
    .uppercase {
        text-transform: uppercase;
    }
    .font-weight-normal {
        font-weight: normal;
        font-family: poppins-regular, sans-serif;
    }
    .text-align-left {
        text-align: left;
    }
    .text-align-center {
        text-align: center;
    }
    .text-align-right {
        text-align: right;
    }
    /* Document specific */
    .emargement-document .header .documentTitle {
        font-family: poppins-bold, sans-serif;
        font-size: 14px;
        line-height: 14px;
        text-transform: uppercase;
        float: right;
        color: #3439E4;
    }
    .emargement-document table.emargement {
        font-size: 12px;
        line-height: 12px;
        border-collapse: collapse;
    }
    .emargement-document table.emargement th, .emargement-document table.emargement td {
        padding: 10px;
        height: 18px;
    }
    .emargement-document table.emargement th {
        border: 1px solid #8c8c8c;
        border-bottom: 2px solid #8c8c8c;
        background: #c1c1c1;
    }
    .emargement-document table.emargement td {
        border: 1px solid #e5e5e5;
    }
    .emargement-document table.emargement th.clean {
        border: none;
        background: white;
    }
    .emargement-document table.emargement th.light {
        border: 1px solid #b4b4b4;
        background: #d6d6d6;
    }
    .emargement-document table.emargement .subtitle {
        text-transform: uppercase;
    }
    .emargement-document table.emargement .subtitle-caption{
        font-weight: normal;
        font-family: poppins-regular, sans-serif;
        font-size: 10px;
    }
    .emargement-document table.emargement .border-right {
        border-right: 2px solid #C0C0C0 !important;
    }
    .emargement-document table.emargement .border-bottom {
        border-bottom: 2px solid #C0C0C0 !important;
    }
    .emargement-document table.emargement .border-top {
        border-top: 2px solid #C0C0C0 !important;
    }
    .emargement-document table.emargement .border-left {
        border-left: 2px solid #C0C0C0 !important;
    }
    .emargement-document table.emargement .first-column {
        width: 185px;
    }
    .emargement-document table.emargement .blank {
        background: none;
    }
    .emargement-document table.emargement .date-column {
        width: 68px;
        font-size: 10px;
        line-height: 10px;
    }
    .emargement-document table.emargement tbody tr:nth-of-type(even) {
        background-color: #f2f2f2;
    }
    .emargement-document table.emargement tbody tr:last-of-type td {
        border-bottom: 1px solid #b4b4b4;
    }
    .emargement-document table.emargement tbody tr td:last-of-type {
        border-right: 1px solid #b4b4b4;
    }
    .emargement-document table.no-style {
        width: 918px;
    }
    .emargement-document table.no-style th {
        font-size: 14px;
        line-height: 14px;
    }
    .emargement-document table.no-style td {
        font-size: 12px;
        line-height: 12px;
    }
    .emargement-document table.no-style, table.no-style td, table.no-style th {
        border: none;
    }
</style>
