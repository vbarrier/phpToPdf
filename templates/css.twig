<style>
    @page {
        margin: 100px;
    }
    @font-face {
        font-family: poppins-regular;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-regular.ttf") format("truetype");
    }
    @font-face {
        font-family: poppins-bold;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-bold.ttf") format("truetype");
    }
    @font-face {
        font-family: poppins-italic;
        font-weight: normal;
        font-style: normal;
        src: url("dompdf/lib/fonts/poppins-italic.ttf") format("truetype");
    }
    body {
        font-family: poppins-regular, sans-serif;
        font-size: 14px;
        line-height: 14px;
    }
    b, strong {
        font-family: poppins-bold, sans-serif;
    }
    i, em {
        font-family: poppins-italic, sans-serif;
    }
    h1 {
        margin-top: 100px;
        text-align: center;
        margin-bottom: 150px;
        text-transform: uppercase;
    }
    h1, h2, h3, h4, h5, h6 {
        font-family: poppins-bold, sans-serif;
    }
    .signature {
        margin-top: 150px;
        float: right;
    }
    .dynamic {
        font-family: poppins-bold, sans-serif;
    }
    .logo {
        width: 150px;
    }
    .documentTitle {
        font-size: 12px;
        float: right;
    }
    .header {
        margin-top: -45px;
    }
    .footer {
        font-size: 11px;
        line-height: 11px;
        text-align: center;
        position: fixed;
        bottom: -45px;
        left: 0;
        right: 0;
        height: 50px;
    }
    .uppercase {
        text-transform: uppercase;
    }
    table.emargement {
        font-size: 12px;
        border-collapse: collapse;
    }
    table.emargement  th, table.emargement  td {
        padding: 10px;
        height: 17px;
    }
    table.emargement  th {
        border: 1px solid #8c8c8c;
        border-bottom: 2px solid #8c8c8c;
        background: #c1c1c1;
    }
    table.emargement  td {
        border: 1px solid #e5e5e5;
    }
    table.emargement .attribute-title {
        width: 50px;
    }
    table.emargement .attribute-value {
        width: 190px;
    }
    table.emargement  th.clean {
        border: none;
        background: white;
    }
    table.emargement  th.light {
        border: 1px solid #b4b4b4;
        background: #d6d6d6;
    }
    table.emargement  .table-category-name {
        text-transform: uppercase;
    }
    table.emargement  .table-category-text {
        font-weight: normal;
        font-family: poppins-regular, sans-serif;
        font-size: 10px;
    }
    table.emargement  .label {
        text-align: left;
        border-right: 2px solid #C0C0C0 !important;
    }
    table.emargement  .border-bottom {
        border-bottom: 2px solid #C0C0C0 !important;
    }
    table.emargement .first-column {
        width: 185px;
    }
    table.emargement .column {
        width: 68px;
        font-size: 10px;
    }
    table.emargement tbody tr:nth-of-type(even) {
        background-color: #f2f2f2;
    }
    table.emargement tbody tr:last-of-type td {
        border-bottom: 1px solid #b4b4b4;
    }
    table.emargement tbody tr td:last-of-type {
        border-right: 1px solid #b4b4b4;
    }
</style>
